@model LS_BlogLuca.EF.About

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}




<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">About</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   @if (Model.IdAbout == 0)
                   {<text>Inserisci contenuti page about...</text> }
                   else
                   { <text>Modifica contenuti page about...</text> }
                      
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @*<form role="form">*@
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.IdAbout)

                                <div class="form-group">
                                    <label>Titolo</label>
                                    @*<input class="form-control">*@
                                    @Html.EditorFor(model => model.Titolo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Titolo, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Titolo EN</label>
                                    @*<input class="form-control">*@
                                    @Html.EditorFor(model => model.Titolo_en, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Titolo_en, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label>Contenuti</label>
                                  
                                    @Html.ValidationMessageFor(model => model.Contenuti, "", new { @class = "text-danger" })

                                    @Html.TextAreaFor(model => model.Contenuti, new { @class = "form-control", rows="30" } )
                                    
                                </div>
                                <div class="form-group">
                                    <label>Contenuti EN</label>
                                    @Html.ValidationMessageFor(model => Model.Contenuti_en, "", new { @class = "text-danger" })

                                    @Html.TextAreaFor(Model => Model.Contenuti_en, new { @class = "form-control", rows = "30" })
                                    @*<textarea class="form-control" rows="3"></textarea>*@
                                    @*@Html.EditorFor(model => model.Contenuti_en, new { htmlAttributes = new { @class = "form-control" , rows="3"} })*@

                                    @*<textarea class="form-control"  rows="30">@Model.Contenuti_en</textarea>*@
                                    @*@Html.ValidationMessageFor(model => model.Contenuti_en, "", new { @class = "text-danger" })*@
                                </div>
                              
                               
                                if (Model.IdAbout == 0)
                                {
                                    <button type="submit" value="Create" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp&nbspInserisci</button>
                                }
                                else
                                {
                                    <button type="submit" value="Save" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp&nbspSalva</button>}

                                @*<button type="submit" value="Save"  class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp&nbspSalva</button>*@
                                }
                            @*</form>*@
                        </div>
