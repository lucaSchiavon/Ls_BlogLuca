@model LS_BlogLuca.EF.Categorie

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}




<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Articolo</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   @if (Model.IdCategoria == 0)
                   {<text>Inserisci la categoria...</text> }
                   else
                   { <text>Modifica la categoria...</text> }
                      
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                           
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.IdCategoria)
                              
                                <div class="form-group">
                                    <label>Categoria</label>
                                  
                                    @Html.EditorFor(model => model.Categoria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Categoria EN</label>
                                   
                                    @Html.EditorFor(model => model.Categoria_en, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Categoria_en, "", new { @class = "text-danger" })

                                </div>
                             
                              
                                if (Model.IdCategoria == 0)
                                {
                                    <button type="submit" value="Create" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp&nbspInserisci</button>
                                }
                                else
                                {
                                    <button type="submit" value="Save" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp&nbspSalva</button>}

                                }
                         
                        </div>
